<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
  <persistence-unit name="Persistencia">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:/app/jdbc/jdbc/pdtDS</jta-data-source>
    <class>cl.clarochile.pdt.persistencia.PdtConfig</class>
    <class>cl.clarochile.pdt.persistencia.persistencia.PdtConfigError</class>
    <class>cl.clarochile.pdt.persistencia.persistencia.PdtContingencia</class>
    <class>cl.clarochile.pdt.persistencia.persistencia.PdtEnvio</class>
    <class>cl.clarochile.pdt.persistencia.persistencia.PdtLog</class>
    <class>cl.clarochile.pdt.persistencia.persistencia.PdtRegEnvio</class>
    <properties>
      <property name="eclipselink.target-server" value="WebLogic_10"/>
      <property name="javax.persistence.jtaDataSource" value="java:/app/jdbc/jdbc/pdtDS"/>
    </properties>
  </persistence-unit>
</persistence>
